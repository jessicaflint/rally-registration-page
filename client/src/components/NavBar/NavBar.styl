nav-bar-height = 100px

.flip
  transform: rotate3d(1, 0, 0, -90deg)

.nav-bar-wrapper
  perspective: 100vw
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 11

.nav-bar
  background: white
  /*box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.5)*/
  position: fixed
  top: 0
  left: 0
  z-index: 99
  width: 100%
  display: flex
  align-items: center
  justify-content: space-between
  transform-origin: top
  transition: transform 0.5s ease
  -webkit-font-smoothing: antialiased
  padding: 0 24px
  box-sizing: border-box
  .free-pass-button
    margin: 20px 0
    padding: 0
    .free-pass
      padding: 20px 0
  h1
    padding: 0px 15px
  .logo
    width: 50px
    height: 50px
    background: grey
  .header
    display: flex
    flex-direction: row
    padding: 0
    align-items: center
    justify-content: flex-start
    background: white
    .icon
      width: 10%
    .title
      height: 175px
  ul
    width: 100%
    display: flex
    justify-content: flex-end
    align-items: center
    height: nav-bar-height

    .nav-link:hover > .nav-item-above
        transform: rotate3d(1 0 0 0)

    .nav-link > .nav-item-above
      @include transition(all 0.25s ease-in-out)
      transform: rotate3d(1 0 0 -90deg)
      transform-origin: center top 8px
      height: 0vh

    .nav-link:hover > .nav-item
        transform: rotate3d(1 0 0 90deg)

    .nav-link > .nav-item
      @include transition(all  0.25s ease-in-out)
      transform: rotate3d(1 0 0 0)
      transform-origin: center bottom 8px

    .nav-link
      text-decoration: none
      color: #635656
      font-weight: 100
      z-index: 9

    li
      list-style-type: none
      padding: 0px 10px

    .selected-page
      color: #dea1a1
