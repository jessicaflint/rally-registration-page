.header
  width: 100%
  background: #f2f2f2
  padding-top: 100px
  padding: 50px
  box-sizing: border-box
  display: flex
  justify-content: center
  flex-direction: column
  align-items: center
  img
    width: 40%
    object-fit: contain
  .headline
    display: flex
    justify-content: center
    align-items: center
    h2
      padding: 100px
  .header-content
    display: flex
    .video
      width: 45%
      height: auto
      background: white
    .description
      width: 45%
      margin-left: 27px
    .ticket
      display: flex
      align-items: center
      p
        margin-left: 25px
    p
      margin-bottom: 25px
