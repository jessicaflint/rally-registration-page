@import './variables.styl'
@import './helpers/transition.styl'
@import './helpers/user_select.styl'
@import './helpers/user_drag.styl'
@import './Animations.styl'

@font-face {
  font-family: 'Gotham';
  font-style: normal;
  font-weight: 400;
  src: url('../fonts/Gotham.eot');
  src: local('Gotham'),
    url('../fonts/gotham.woff2') format('woff2'),
    url('../fonts/gotham.otf') format('otf'),
    url('../fonts/Gotham.ttf') format('ttf'),
    url('../fonts/gotham.woff') format('woff')
}

html
  overflow-x: hidden
  width: 100%
  position: absolute

body
  margin: 0
  padding: 0
  overflow-x: hidden
  position: absolute
  -webkit-tap-highlight-color: rgba(0 0 0 0)

  iframe
    width: 100%
    video
      height: 100vh
      object-fit: cover
      object-position: 59% 0%

  #root
    width: 100vw

  .App
    width: 100%
    overflow-x: hidden
    background: section-color
    .layout
      width: 100%

  .left-border
  .right-border
    position: fixed
    top: 0
    height: 100vh
    width: 5vw
    background: section-color
    z-index: 2

    @media all and (max-width: 800px)
      width: 0

  .left-border
    left: 0
  .right-border
    right: 0

  h1
  h2
  h3
  h4
  h5
  h6
  p
  li
  ul
  button
  b
  label
    font-family: 'Roboto', sans-serif;
    font-weight: 100
    margin: 0
    padding: 0
    user-select: none
    color: #555056

  li
    list-style: none
    color: #555056


  a
    color: #9090cc
    text-decoration: none

  h1
    font-size: 3em
    color: #3d434e
    font-weight: 900

  h2
    font-size: 1.9em
    font-weight: 900
    color: #2b2835
    text-align: center

  h3
    font-size: 1.7em
    color: #e0ad9c
    font-weight: 600

  p
  span
    font-family: 'Futura'
    font-size: 1.4em
    color: #7b7b7b

  img
    width: 100%
