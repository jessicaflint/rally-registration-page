.host
  width: 100%
  background: white
  padding: 100px
  box-sizing: border-box
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  @media all and (max-width: 700px)
    padding: 0
  h2
    margin: 50px 0
    @media all and (max-width: 700px)
      margin: 0
      padding: 10px 0
  .top-description
    width: 100%
    display: flex
    justify-content: center
    align-items: flex-start
    @media all and (max-width: 700px)
      align-items: center
      flex-direction: column
    .right-description
      width: 50%
      margin-left: 50px
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column
      @media all and (max-width: 700px)
        width: 75%
        margin: 0
        padding-top: 20px
  .bottom-description
    width: 100%
    margin-left: 50px
    @media all and (max-width: 700px)
      margin: 0
      width: 75%
  p
    margin: 25px 0
    line-height: 1.3em;
  img
    width: 40%
    @media all and (max-width: 700px)
      width: 75%
