.benefits
  width: 100%
  background: white
  padding: 100px 0
  h2
    padding: 10px 0
    color: #50454F
  .benefit
    padding: 50px 100px
    display: flex
    justify-content: center
    align-items: center
    @media all and (max-width: 700px)
      flex-direction: column
    @media all and (max-width: 1500px)
      padding: 50px 10px
    justify-content: space-around
  p
    padding-top: 20px
    line-height: 1.3em;
  .content
    width: 60%;
    display: flex;
    flex-direction: column;
    @media all and (max-width: 700px)
      justify-content: center;
      align-items: center;
      width: 75%;
  img
    width: 20%
    @media all and (max-width: 700px)
      width: 50%
  .number
    margin-bottom: 20px
    font-size: 5em
    font-family: 'Gotham', Futura, sans-serif
    color: #6A5B69
