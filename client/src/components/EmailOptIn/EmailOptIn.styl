.email-opt-in
  width: 100%
  height: 100vh
  position: fixed
  top: 0
  z-index: 12
  background: rgba(82, 72, 72, 0.5)
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  .registration-block
    background: white
    width: 75%
    padding: 100px 40px
    padding-top: 50px
    box-sizing: border-box
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    border-radius: 8px
    h1
      padding-bottom: 50px
      text-align: center
      cursor: default
    h3
      text-align: center
      padding-bottom: 25px
      cursor: default
    input
      width: 100%
      border: 0.5px solid #c3b2b2
      border-radius: 1px
      padding: 1em 15px
      font-size: 1.5em
      font-family: 'Gotham', Futura, sans-serif
      box-sizing: border-box
      outline: none
      margin-top: 20px
      background: #f9f9f9
    input[type=submit]
      user-select: none
      cursor: pointer
      border: none
      background: #F76C6C
      color: white
      transition: opacity 0.3s, transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), background 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), -webkit-transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
      /*box-shadow: 0 16px 18px 0 rgba(0,0,0,0.13), 0 4px 6px 0 rgba(0,0,0,0.16)*/
      padding: 20px 0
    input[type=submit]:hover
      background: transparent
      color: #c3b2b2
