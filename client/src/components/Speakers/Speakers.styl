.speakers-container
  background: #fbf8fb
  display: flex
  justify-content: center
  flex-direction: column
  align-items: center
  h2
    width: 50%
    padding: 100px 0
  .speakers
    padding: 100px 0
    width: 100%
    background: white
    display: grid
    grid-template-columns: repeat(3, 3fr)
    grid-row-gap: 100px
    justify-items: center
    h3
      font-size: 1.3em
      text-align: center
      padding-top: 20px
    .speaker
      width: 60%
      img
        width: 100%
